.audio-pos {
  width: 90%;
  height: 120rpx;
  z-index: 100;
}
.audio-box {
  width: 100%;
  height: 120rpx;
  position: relative;
  z-index: 100;
}
.audio-bg {
  width: 100%;
  height: 120rpx;
  position: absolute
}
.audio {
  position: absolute;
  right: 40rpx;
  top:45rpx;
  height: 47rpx;
  width: 55rpx;
  background: url("http://h5.putao.com/seekingImages/icon_loudspeaker_ani@3x.png") no-repeat;
  background-size: 76rpx 208rpx;
}
.norplay {
  background-position: -10rpx -140rpx;
}
.playbtn1{
  background-position: -10rpx -3rpx;
}
.playbtn2{
  background-position: -10rpx -72rpx;
}
@keyframes playing {
  0%,
  100% {
      background-position: -10rpx -140.625rpx; 
  }
  33.333333% {
     background-position: -10rpx -70.5rpx; 
  }
  66.666666% {
     background-position: -10rpx -3rpx; 
  }
}
.playing {
  -webkit-animation: playing 1s infinite step-start;
     animation: playing 1s infinite step-start;
}
.play-time {
  position: absolute;
  font-size: 28rpx;
  width: 75%;
  left: 6%;
  top:20rpx;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  color: #485d6b;
}
.progress {
  position: absolute;
  width: 75%;
  left: 6%;
  top:80rpx;
}