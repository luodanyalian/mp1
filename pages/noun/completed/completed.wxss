@import '/common/base.wxss';
@import '/components/background-audio/background-audio.wxss';
page {
  height: 100%;
  overflow: hidden;
}
.container {
  padding: 0;
  background: url("http://h5.putao.com/seekingImages/map/img_task_bg_01@3x.jpg") no-repeat center;
  background-size: 100% 100%;
  width: 100%;
  height: 100%;
  position: relative;
}
.swiper {
  width: 100%;
  height: 50%;
  position: relative;
  z-index: 2;
}
.swiper-item {
  z-index: 3;
}
.slide-image {
  width: 100%;
  height: 100%;
  z-index: 4;
}
.indicator-dots {
  position: absolute;
  top:50rpx;
  padding: 10rpx 0px;
  width: 150rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, .7);
  color: #fff;
  font-size: 35rpx;
  border: 2px solid #b2cf94;
  border-radius: 50rpx;
  margin: 0 auto;
  left: 37%;
  z-index: 10;
}
.mohu {
  position: absolute;
  bottom:0rpx;
  z-index: 5;
  background: url(http://h5.putao.com/seekingImages/map/mask_task_cover@3x.png) no-repeat center;
  background-size: 100% 100%;
  width: 100%;
  height: 50%;
}
.title {
  bottom:50%;
  z-index: 10;
  text-align: center;
  vertical-align: middle;
  width: 90%;
  left: 5%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-weight: bold;
  font-size: 40rpx;
  color: #485d6b;
}
/*语音播放*/
.box {
  position: absolute;
}
.audio-pos {
  left:5%;
  bottom:37%;
  width: 90%;
  height: 120rpx;
}
/*景物介绍*/
.description {
  position: absolute;
  z-index: 12;
  bottom: 15%;
  width: 90%;
  margin: 0 auto;
  font-size: 40rpx;
  background: url("http://h5.putao.com/seekingImages/img_task_annotation_bubble@3x.png") no-repeat center;
  background-size: 100% 100%;
  color: #485d6b; 
  padding-top: 5%; 
  box-sizing:  border-box;
  word-wrap: break-word;
}
.scroll-view {
  box-sizing:  border-box;
  height:200rpx;
  padding: 0rpx 20rpx;
  padding-bottom: 5rpx;
  /* padding-right: 3%; */
}
.context {
  display: inline-block;
  word-wrap: break-word;
  font-size:28rpx;
}
.foot {
  position: absolute;
  bottom: 30rpx;
  left: 5%;
  right: 5%;
}
.foot-box {
  position: relative;
}
.icon1 {
  position: absolute;
  left: 18%;
  bottom:0rpx;
  width: 330rpx;
  height: 100rpx;
  visibility:hidden;
}
.icon2 {
  position: absolute;
  bottom:0rpx;
  right:-5px;
  width:230rpx;
  height:110rpx;
}
.icon3 {
  right: 0px;
  position: absolute;
  bottom:-15px;
  width:200rpx;
  height:145rpx;
}
.icon4 {
  position: absolute;
  left: 0px;
  bottom:-20rpx;
  width: 125rpx;
  height: 125rpx;
}
