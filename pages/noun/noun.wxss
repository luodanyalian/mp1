.noun-list {
  width: 100%;
  height: 85%;
  position: absolute;
  /* top: 290rpx; */
  top: 150rpx; 
  z-index: 1
}

.cxd-noun {
  display: inline-block;
  margin: 60rpx 50rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 5rpx solid #203237;
  position: relative;
  vertical-align:top;
}

.noun-list .noun-icon {
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
  border: 2rpx solid #0891d5;
}

.list-status {
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
  text-align: center;
  position: absolute;
  top:0px;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}
.itemName {
  margin-top: 10rpx;
  width: 150rpx;
  text-align: center;
  display: block;
  white-space: wrap;
  color: #203142;
  font-size: 12px;
  height:76rpx;
  line-height:140%;
  min-height:76rpx;
}
.image-center {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  z-index: 3;
}

.image-success {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: -50rpx;
  left: 80rpx;
}

.noun-foot {
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 228rpx;
  z-index: 30
}

.noun-foot .foot-main {
  position: relative;
  width: 100%;
  height: 228rpx;
}

.noun-foot .foot-main .foot-text {
  position: absolute;
  top: 70rpx;
  z-index: 5;
  left: 34%;
  font-size: 27rpx;
  color: #a4ecfd;
  width: 349rpx;
}

.noun-foot .foot-main .foot-text text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.noun-foot .foot-main .foot-bg {
  position: absolute;
  z-index: 2;
  bottom: 0rpx;
  width: 100%;
  height: 270rpx;
}

.noun-foot .foot-main .btn-completed {
  width: 100rpx;
  height: 155rpx;
  z-index: 4;
  position: absolute;
  right: 27rpx;
  top: 50rpx;
}
.noun-foot .foot-main .goback {
  position:absolute;
  z-index:5;
  top:10rpx;
  left:5%;
  width:200rpx;
  height:215rpx;
}