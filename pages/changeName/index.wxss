.wrapper{
  background-color: #f5f5f5;
  width: 100%;
  height: 600rpx;
  padding-top: 10rpx;
}
.form_item{
  padding:0 20rpx;
  background-color: #fff;
}
.form_item_inner{
  border-bottom: 1rpx solid #eee;
  padding:50rpx 0;
  position: relative;
}
.label{
  color:#666;
  font-size: 28rpx;
}
.avatar{
  width: 130rpx;
  height: 130rpx;
  position: absolute;
  right: 60rpx;
  top:15rpx;
}
.more_icon{
  position: absolute;
  right: 10rpx;
  top:50rpx;
}
.new_name{
  position: absolute;
  right: 60rpx;
  top:60rpx;
  font-size: 28rpx;
  color:#666;
}
.btn_box{
  padding: 0 40rpx;
  margin-top: 50rpx;
}